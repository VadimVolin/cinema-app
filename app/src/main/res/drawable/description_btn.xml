<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <corners android:topLeftRadius="100dp" />
            <solid android:color="@color/main_pink_color" />
            <padding android:bottom="5dp" android:left="20dp" android:right="5dp" android:top="20dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:topLeftRadius="100dp" />
            <padding android:bottom="5dp" android:left="20dp" android:right="5dp" android:top="20dp" />
            <solid android:color="@color/main_pink_pressed" />
        </shape>
    </item>
</selector>